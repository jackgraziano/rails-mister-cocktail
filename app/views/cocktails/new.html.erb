<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 text-center">

      <h1>New Cocktail</h1>

        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit %>
        <% end %>

        <%= link_to 'Back', cocktails_path, {class: 'btn btn-info btn-lg', style: 'margin: 20px'} %>

    </div>

  </div>
</div>


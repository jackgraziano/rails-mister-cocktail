
<div class="container">
  <div class="row">
    <col-xs-12 class="col-sm-4 col-sm-offset-4 text-center">

      <h1>Add ingredient</h1>

      <p>to the wonderful</p>

      <h4><%= @cocktail.name %></h4>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description , label: "Measure" %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>

      <%= link_to 'Back', cocktail_path(@cocktail.id), {class: 'btn btn-info btn-lg', style: 'margin: 20px'} %>


    </col-xs-12>
  </div>

</div>
